[user]
	name = Kostas Evangelou
	email = evangelou.konstantinos@gmail.com

[core]
	editor = vim
	pager = delta

[delta]
        line-numbers = true

[alias]
	a = "add"
	b = "branch"
	c = "commit -m"
	caen = "commit --amend --no-edit"
	co = "checkout"
	d = "diff"
	dc = "diff --cached"
	l = "log"
	lp = "log -p -1"
	lol = "log --graph --pretty=format:'%C(auto)%h%d%Creset %C(cyan)(%ci)%Creset %C(green)%cn%Creset %s'"
	p = "push"
	rh = "reset --hard"
	s = "status"
	sha = "rev-parse HEAD"

[pull]
	rebase = true

[log]
	decorate = short

[rerere]
	enabled = true
